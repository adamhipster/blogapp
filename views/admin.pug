html
	head
		title Admin
	body
		h1 Admin
		form(name='createPost' method='POST' action=action)
			label(for='title') Title
			br
			input(id='pTitle' type='text' name='title' value=title)
			br
			label(for='post') Post
			br
			textarea(id='pBody' type='text'  name='body' rows='10' cols='100')
				| #{body}
			br
			input(type='submit' value='submit')

		h1 Posts
		each post in posts
			p #{post.title}   
				a(href='/admin/'+post.title+'/delete') delete  
				| ... 
				a(href='/admin/'+post.title+'/edit?title='+post.title) 'Edit'